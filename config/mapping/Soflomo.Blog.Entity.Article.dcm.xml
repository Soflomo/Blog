<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Soflomo\Blog\Entity\Article" table="blog_article" repository-class="Soflomo\Blog\Repository\Article">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string" unique="false" nullable="false" />
        <field name="lead"  type="text"   unique="false" nullable="true" />
        <field name="body"  type="text"   unique="false" nullable="true" />

        <field name="publishDate" column="publish_date" type="date" unique="false" nullable="true" />

        <many-to-one field="blog" target-entity="Soflomo\Blog\Entity\Blog" nullable="false" />
    </entity>
</doctrine-mapping>